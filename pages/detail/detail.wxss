.view-main {
  padding: 0.5rem;
  font-size: 0.75rem;
  line-height: 1.5;
  word-break: break-all;
  text-align: justify;
}

.view-main>view {
  padding-top: 0.5rem;
  padding-bottom: 0.5rem;
}

.article-title {
  font-size: 1rem;
  display: block;
  padding-bottom:0.5rem;
}

.article-author {
  font-size: 0.75rem;
  color: #aaa;
  border-bottom: 1px solid #ddd;
}

.article-author text {
  display: inline-block;
  padding-right: 0.5rem;
}

.article-desc {
  border-bottom: 1px solid #ddd;
  color: #333;
}

