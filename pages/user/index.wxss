/**index.wxss**/

.user-info {
  background: #009688;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 10rem;
}

.info-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.info-nickname {
  color: #fff;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  font-weight: 900;
}

.user-setting {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #eee;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
}

.user-setting>view {
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #fff;
}

.user-setting text {
  display: inline-block;
  font-size: 1rem;
}

.left-icon {
  flex: 4;
  /*text-align: center;*/
  padding: 0 0.75rem;
}

.left-icon text {
  margin-right: 0.5rem;
}

.left-icon .fa {
  color: #009688;
}

text.center-content {
  font-size: 0.7rem;
  font-family: 黑体;
}

.right-icon {
  flex: 1;
  text-align: right;
  padding: 0 0.75rem;
}

.user-setting .setting-main, .setting-main {
  flex: 1;
  /*background: #eee;*/
  padding: 0.75rem;
  border-bottom: 1px solid #ddd;
}

.user-setting .setting-list {
  flex: 2;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0.5rem 0;
  border-bottom: 1px solid #ddd;
  margin-bottom: 0.5rem;
}

.user-setting .setting-list>view {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-setting .setting-list .fa {
  flex: 2;
  padding: 0.35rem 0;
}

.user-setting .setting-list .content {
  flex: 1;
  font-size: 0.6rem;
}

.user-setting.second {
  flex-direction: column;
  margin-bottom: 0.5rem;
}

button {
  width: 100%;
  height: 2rem;
  color: #fff !important;
  background: #009688 !important;
  line-height: 2rem;
  border-radius: 0;
  border: 0 !important;
  font-size: 0.75rem;
  transition:background 0.25s;
}
.button-hover{
  background:#26a69a!important;
}
