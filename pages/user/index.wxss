.user-info {
  background: #009688;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.info-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.info-nickname {
  color: #fff;
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  font-weight: 900;
}

.user-setting {
  display: flex;
  flex-direction: column;
  align-items: stretch; 
  font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
  background:#eee;
}

.user-setting>view {
  display: flex;
  flex-direction: row;
  background: #fff;
}

.user-setting text {
  display: inline-block;
  font-size: 40rpx;
}

.left-icon {
  flex: 4; 
  padding: 0 10rpx;
}

.left-icon text {
  margin-right: 20rpx;
}

.left-icon .fa {
  color: #009688;
}

text.center-content {
  font-size: 30rpx;
  font-family: 黑体;
}

.right-icon {
  flex: 1;
  text-align: right;
  padding: 0 10rpx;
}

.user-setting .setting-main, .setting-main {
  flex: 1;
  padding: 30rpx;
  border-bottom: 2rpx solid #ddd;
}

.user-setting .setting-list {
  flex: 2;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #ddd;
  margin-bottom: 10rpx;
}

.user-setting .setting-list>view {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-setting .setting-list .fa {
  flex: 2;
  padding: 20rpx 0;
}

.user-setting .setting-list .content {
  flex: 1;
  font-size: 25rpx;
}

.user-setting.second {
  flex-direction: column;
  margin-bottom: 10rpx;
}

button {
  width: 100%;
  height: 90rpx;
  color: #fff !important;
  background: #009688 !important;
  line-height: 90rpx;
  border-radius: 0;
  border: 0 !important;
  font-size: 30rpx;
  transition: background 0.25s;
}

.button-hover {
  background: #26a69a !important;
}
