
.view-list {
  margin: 0;
  padding: 0;
  font-family: 黑体;
   
}
.list-loadtxt{
  text-align:center;
  font-size:0.7rem;
  padding:0.5rem;
}


.list-article {
  display: flex;
  flex-direction: row;
  padding: 0.8rem 0.5rem;
  border-bottom: 1px solid #ddd;
  font-size: 0.7rem;
}

.list-article .article-content {
  flex: 7;
  overflow: hidden;
  padding-right: 5px;
  word-break: break-all;
}

.list-article .article-content .title {
  width: 100%;
  font-size:0.9rem;
  display: block;
  margin-bottom: 0.3rem;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color:#263238;
}

.list-article .article-content .desc {
  color: #9e9e9e;
  height: 2.52rem;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom:0.5rem;
  line-height: 1.8;
}

.list-article .article-content .info {
  margin-top: 5px;
  color:#009688;

}
.list-article .article-content .info text{
  display:inline-block;
  margin-right:0.5rem;
}

.list-article .article-img {
  background: rgb(245,245,245);
  flex: 3;
  text-align: center;
  background-position:center;
  background-size:contain;
  background-repeat: no-repeat;
  padding:0.5rem 0;
  background-clip:content-box;
}


